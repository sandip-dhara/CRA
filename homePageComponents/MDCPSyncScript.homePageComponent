    <body>&lt;!-- We can locate this div with the script below, traverse up the DOM and then hide the entire sidebar component. --&gt;&lt;div id=&quot;sidebarMDCPSYnc&quot;&gt;If you see this, something is broke with Dynamic Button functionality.&lt;/div&gt;&amp;nbsp;&lt;!-- Import jQuery from google CDN, could also be static resource--&gt;&lt;script src=&quot;https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js&quot; type=&quot;text/javascript&quot;&gt;&lt;/script&gt;&amp;nbsp;&lt;script type=&quot;text/javascript&quot;&gt;/*Immediately create a unique alias for this version of jQuery to prevent conflicts with other js libraries*/  var j$ = jQuery.noConflict();  var HP = HP || {}; HP.buttonEnablement = function(){  /* true if account detail*/  var ix; j$(&quot;#sidebarMDCPSYnc&quot;).closest(&quot;.sidebarModule&quot;).hide().prev().hide(); j$(&quot;#sidebarMDCPSYnc&quot;).closest(&quot;.sidebarModuleHeader brandPrimaryBgr&quot;).hide().prev().hide();  ix = window.location.href.indexOf(&apos;.com/&apos;) ;   if(window.location.href.substring( ix + 5, ix + 8 ) ==&apos;001&apos;) {   /*   get record type      */         var recordType, profilename;   recordType = HP.getRecordType();  if (recordType.recordTypeName === &quot;Partner&quot; || recordType.recordTypeName === &quot;Competitor&quot; || recordType.recordTypeName === &quot;Customer&quot;) {    profilename = HP.getUserProfile();      }         /*        if condition        */	 if(recordType.recordTypeName==&apos;Partner&apos;){  if(profilename==&apos;Advanced Admin&apos;||profilename==&apos;Front Line&apos;||profilename==&apos;IT Administrator&apos;||profilename==&apos;Master Data&apos;||profilename==&apos;Master Data Account Admin&apos;){ 	if(recordType.recordSubtype!=&apos;Business Relationship&apos;){		j$(&quot;input[name=&apos;mdcpsync&apos;]&quot;).prop(&apos;disabled&apos;, true).css(&quot;color&quot;, &quot;#908989&quot;,&quot;background-color&quot;,&quot;transparent&quot;);		}	 }else{ 	j$(&quot;input[name=&apos;mdcpsync&apos;]&quot;).hide(); }	 }else if(recordType.recordTypeName==&apos;Customer&apos;||recordType.recordTypeName==&apos;Competitor&apos;){  /***Scripr to override View Hierarchy Functionality**************/	var currentHref = window.location.href;	var AccountRecordId = currentHref.substring(currentHref.indexOf(&apos;.com/&apos;)+5, currentHref.indexOf(&apos;.com/&apos;)+20);	    	j$(&quot;a&quot;).each(function(){ 	if(j$(this).text()==&quot;[View Hierarchy]&quot;){ 	j$(this).attr(&apos;href&apos;,&apos;/apex/MDCPViewAccountHierarchy?id=&apos;+AccountRecordId);	}	});/*********************End Script ViewHierarchy*************************/			if(profilename==&apos;Master Data Account Admin&apos;||profilename==&apos;Master Data&apos;||profilename==&apos;IT Administrator&apos;){		}else{			j$(&quot;input[name=&apos;mdcpsync&apos;]&quot;).hide();		}	  }    } }; HP.getRecordType = function() {    /*  this function shall return recordtype of the record                      */  /*  this has dependency that sforce must be loaded first as part of other JS */  var result, record, i, recordId, recordType, recordTypeId, recordTypeName;  recordId = window.location.href.substring( window.location.href.indexOf(&apos;.com/&apos;) + 5, window.location.href.indexOf(&apos;.com/&apos;) + 20 );  result = sforce.connection.query(&quot;SELECT Account.Record_Subtype__c,RecordType.Name FROM Account WHERE Account.Id =&apos;&quot; + recordId + &quot;&apos;&quot;);   record = result.getArray(&quot;records&quot;)[0];   result = {recordTypeName: record.RecordType.Name, recordSubtype: record.Record_Subtype__c};  return result; };  HP.getUserProfile = function() {   /*  this function shall return user profile of the record                     */   /*  this has dependency that sforce must be loaded first as part of other JS   */   var user, result, profilename,profileid;    user=sforce.connection.getUserInfo();   try{         result = sforce.connection.query(&quot;select ProfileId from user where id=&apos;&quot;+user.userId+&quot;&apos;&quot;); profileid = result.getArray(&quot;records&quot;)[0].ProfileId;	 result=null; result=sforce.connection.query(&quot;select Name from Profile where Id =&apos;&quot;+profileid+&quot;&apos;&quot;);	 profilename = result.getArray(&quot;records&quot;)[0].Name;  }catch (e) {}   return profilename; };  j$(document).ready(HP.buttonEnablement);  &lt;/script&gt;</body>
