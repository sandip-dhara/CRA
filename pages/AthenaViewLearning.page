                </a>               
              </apex:outputPanel>                
                
                <apex:outputPanel rendered="{!IF(CONTAINS(LearningDtls.LType,'Video'),(IF(CONTAINS(LearningDtls.LURL,'www.brainshark.com'),(IF(CONTAINS(LearningDtls.LURL,'vu?pi='),true,false)),false)),false)}">
