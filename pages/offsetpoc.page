<apex:page controller="offset">
    <apex:form >
    <apex:commandButton value="click"  action="{!totalrecords}" rerender="table"/>  
    <apex:PageBlock id="block">
    <apex:pageBlockTable value="{!records}" var="rec" id="table">
        <apex:column value="{!rec.name}"/>
        
    </apex:pageBlockTable>
    </apex:PageBlock>
    
    </apex:form>
</apex:page>