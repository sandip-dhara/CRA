<apex:page standardcontroller="Opportunity_Plan__c"
    extensions="dhc_extension" standardStylesheets="true"
    showheader="false" sidebar="false" title="Opportunity_plan__c">
    <apex:includeScript value="{!$Resource.jquery172}" />
    <apex:includeScript value="/soap/ajax/21.0/connection.js"/>
    <apex:includeScript value="/soap/ajax/21.0/apex.js"/> 
    


    <script type="text/javascript">
    j$ = jQuery.noConflict();
    sforce.debug.trace = true;
        sforce.connection.sessionId = "{!$Api.Session_ID}";
        var prev_stage = '';
        var clearBoxes;
        var inputBoxes;
        var csfBoxes;
        has_warning_fired = false;
        
        function alertMe(sel_data)
        {
        new_stage = sel_data.value;
        
        
        if (has_warning_fired == true){
            getPicklistValues(new_stage)
        }
        if (has_warning_fired == false)
            {
            var r=confirm('WARNING: You are changing the Opportunity Stage for this deal. All ratings will be removed.  However, the Get to Green data will remain as-is until user modified.  A snapshot of the current DHC will be saved to the attachments for this opportunity for historical needs.');
            if(r==true)
                {
                
                
                try
                    {
                        dhc_extension.saveCopy('{!Opportunity_Plan__c.id}',function(result, event){
                            if(result == 1){
                                getPicklistValues(new_stage);
                            }
                            else {
                                alert('The system was unable to save a copy of your PDF.');
                            }
                        });
                    }
                catch(e)
                    {
                        alert(e);   
                    }

                
                has_warning_fired=true;
            } 
            else 
            {
                sel_data.value = prev_stage;
                getPicklistValues(prev_stage);
            }
        }
        
    }

    function getPicklistValues(sel_val){
        var stage;
        var stage_csf;
        
        //Set sales stage value
        switch(sel_val)
        {
            case 'Stage 1&2-Understand/Validate':
                stage = 0;
                stage_csf = 'a';
                break;
            case 'Stage 3-Qualify':
                stage = 1;
                stage_csf = 'b';
                break;
            case 'Stage 4 a&b-Develop/Propose Solution':
                stage = 2;
                stage_csf = 'c';
                break;
            default:
            stage = 0;
            stage_csf = 'a';
            ;
        }
        
        
        
        
        //Clear select boxes
        j$.each(clearBoxes, function(data){
            clearBoxes.empty();
        });
        
        //modify visibility of csf boxes
        j$.each(csfBoxes, function(data){
            id_string = this.id;
            compareme = id_string.indexOf(stage_csf,5);
            
            if(compareme > -1){
                j$(this).css('display','block');
            }
            else {
                j$(this).css('display','none');
            }
        });
        
        
        
        
        //get ratings file
        j$.ajax({
            url: "{!$Resource.dhc_ratings}",
            dataType: 'json',
            async: false,
            data: '',
            cache: false,
            success:function(data){
                
                
                //for each select box
                j$.each(data.result[stage].rating, function(key, val){
                    //set target select box
                    targetBox = j$('#ass_'+key);
                    
                    
                    //load ratings for target box
                    j$.each(val, function(key2, val2){
                        if (prev_stage == sel_val){
                        
                        
                            if (inputBoxes[key].value === val2){
                                
                                targetBox.append(j$('<option>', { val2 : val2 }).prop('selected',true).text(val2));
                                
                            }
                            else {
                            
                                targetBox.append(j$('<option>', { val2 : val2  }).text(val2 ));
                        }
                        }
                        else {
                            
                            targetBox.append(j$('<option>', { val2 : val2  }).text(val2 ));
                        }
                    });
                    
                });
            },
            complete: function(r, s){
                    
            }
            });
    }



    
j$(window).load(function() {
        //Store select boxes in local memory
        clearBoxes = j$('[id*="ass"]');
        
        //Store input boxes to local memory
        inputBoxes = j$('[id*="inputBoxes"]');
        
        //Store csf boxes in local memory
        csfBoxes = j$('div[id^="csf_"]');
        
        salesstage = j$('select[id$="salesstage"]');
        prev_stage = salesstage[0].value;
        getPicklistValues(prev_stage);

});
    


var selectids = new Array();


function fillForms(){
    inputboxes = j$('[id*="inputBoxes"]');
    
    for( e=0; e<inputboxes.length; e++ ){
            csf_rating = j$('#ass_'+e).val();
            inputboxes[e].value=csf_rating;
        }
        
    var dateobject = new Date();
    var themonth = dateobject.getMonth();
    var theday = dateobject.getDate();
    var theyear = dateobject.getFullYear();
    //last_updated = j$('[id$="last_updated"]');
    //last_updated[0].value = '{!$User.LastName}, ' + '{!$User.FirstName}, ' + themonth + '/' + theday + '/' + theyear;
}



</script>
